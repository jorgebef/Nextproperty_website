{{!-- This is the create a property page --}} 
<div class="row">
    <div class="col-md-4 offset-md-4">
        <div class="card">
            <div class="card-body">
                {{data.props._id}}
                <form action="/api/properties/edit/{{data.props._id}}" method="post" class="form-group">
                    <div class="form-group">
                        <input type="text" name="ref" value="{{data.props.ref}}" class="form-control" autofocus/>
                        <input type="text" name="title" value="{{data.props.title}}" class="form-control" autofocus/>
                        <input type="text" name="description" class="form-control" value="{{data.props.description}}"/>
                    </div>
                    <button class="btn btn-success btn-block" type="submit">Edit</button>
                </form>
            </div>
        </div>
    </div>
</div>
